{
  "hosting": {
    "public": ".",
    "ignore": [
      "**/.*"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/node_modules/xel/:where*",
        "destination": "/:where*",
        "type": 308
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "X-Frame-Options",
            "value": "sameorigin"
          }
        ]
      }
    ]
  },
  "emulators": {
    "hosting": {
      "host": "0.0.0.0",
      "port": "3000"
    },
    "hub": {
      "host": "0.0.0.0",
      "port": "3001"
    }
  }
}